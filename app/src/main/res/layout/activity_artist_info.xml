<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ghplayer="http://schemas.android.com/tools"
    android:id="@+id/activity_artist_info__view"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:background="@drawable/navigation_view_background"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    app:itemBackground="@drawable/selector_navigation_view_item"
    app:itemIconTint="@color/color_toolbar_title"

    app:itemTextColor="@color/color_toolbar_title">

    <android.support.v7.widget.Toolbar
        android:id="@+id/activity_artist_info__toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/toolbar_background" />

    <ScrollView
        android:id="@+id/activity_artist_info__info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:fillViewport="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.github.siyamed.shapeimageview.RoundedImageView
                android:id="@+id/activity_artist_info__cover"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                ghplayer:siBorderColor="@color/color_divider"
                ghplayer:siBorderWidth="3dp"
                ghplayer:siRadius="6dp"
                ghplayer:siSquare="true"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:id="@+id/activity_artist_info__content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textColor="@color/color_item_track_list_text"
                android:textSize="12sp" />

            <View style="@style/Divider" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/activity_artist_info__read_more"
                android:layout_gravity="center_horizontal"
                android:text="Show more" />

        </LinearLayout>
    </ScrollView>

    <FrameLayout
        android:id="@+id/activity_artist_info__albums"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>


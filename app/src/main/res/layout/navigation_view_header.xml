<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/navigation_drawer_header_height"
    android:background="@android:color/holo_blue_dark"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_main_margin_bottom"
    android:paddingLeft="@dimen/activity_main_margin_left"
    android:paddingRight="@dimen/activity_main_margin_right"
    android:paddingTop="@dimen/activity_main_margin_top">

    <ImageView
        android:id="@+id/navigation_drawer_header_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/navigation_drawer_header_vertical_spacing"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/navigation_drawer_header_vertical_spacing"
        android:text="Android Studio"/>

</LinearLayout>
